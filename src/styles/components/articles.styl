textBorder()
  text-shadow: 1px 0 0 #fff, -1px 0 0 #fff, 0 1px 0 #fff, 0 -1px 0 #fff, .5px .5px #fff, -.5px -.5px 0 #fff, .5px -.5px 0 #fff, -.5px .5px 0 #fff;

.article1
  grid-column: 1 / 4
  grid-row: 1 / 2
  display: grid
  grid-template-columns: 1fr 30%
  position: relative
  background-color: #EFE9E3
  .text
    margin-left: 3%
    h2
      font-size: 4.5rem
      span
        font-size: 4.5rem
        font-family: none
    p
      width: 100%
      font-size: 1.6rem
      color: rgba(0,0,0,.7)
      span
        font-size: 1.4rem
        font-family: none
  img
    position relative
    bottom: 0
    margin-top: 2%
    width: 100%
    height: 95%
    object-fit: contain
    overflow: hidden;

.article2
  grid-column: 4 / 5
  grid-row: 1 / 2
  margin-top: 4%
  padding-left: 3%
  padding-bottom: 3%
  border-left: 3px solid lightgray
  border-bottom: 3px solid lightgray
  img
    width: 100%
    height: 100%
    object-fit: cover

.article3
  grid-column: 1 / 2
  grid-row: 3 / 4
  &__container
    height:100%
  h3
    font-size: 3.5vh
    font-weight: 900
    line-height: 90%
    margin-bottom: 4%
  p
    font-size: 1.4vh
    span
      font-weight: bold
      font-size: 1.4vh
    strong
      font-size: 1.4vh
  img
    margin-top: 10px
    width: 100%
    height: 60%
    object-fit: cover

.article4
  border-top: 8px solid black
  border-bottom: 8px solid black
  grid-column: 1 / 2
  grid-row: 4 / 6
  &__text
    display: flex
    flex-direction: column
    h3
      margin-top: 2%
      color: red
      font-weight: 900
      font-size: 1.7vh
      font-family: Font5
    h2
      font-size: 2.5vh
      font-weight: 900
      font-family: Font5
      line-height: 90%
    p
      margin-top: 2%
      font-size: 1.5vh
      font-weight: 600
      font-family: Font5
    span
      margin-top: 2%
      align-self: flex-end
      font-weight: bold
      font-size: 1.8vh

.article5
  grid-column: 1 / 2
  grid-row: 6 / 8
  padding-top: 10px
  border-top: 1px solid lightgray
  img
    width: 100%
    height: 100%

.article6
  grid-column: 2 / 5
  grid-row: 3 / 5
  display: inline-block
  overflow: hidden;
  &__container
    width: 100%
    height: 100%
    position: relative
    z-index: 2
    &--image
      object-fit: cover
      width: 100%
      height: 100%
    &--text
      z-index: 3
      position: absolute
      bottom: 5%
      left: 1%
      h1
        font-size: 8vh
        width: 70%
        color: #006698
        textBorder()
      h3
        font-family: Font5
        font-size: 2.5vh
        width: 30%
        textBorder()
        span
          font-size: 2.5vh
          textBorder()

.article7
  grid-column: 2 / 3
  grid-row: 5 / 8
  text-align: center
  border-left: 1px solid lightgray
  padding-top: 8%
  span
    color: black
    font-weight: 900
  img
    width: 90%
    height: 35%
  .text
    h1
      font-family: Font5
      font-weight: 900
      padding-top: 7%
      font-size: 6vh
      line-height: 80%
    h2
      font-family: Font5
      font-weight: 900
      font-size: 2.8vh
    p
      font-family: Font5
      font-weight: 200
      margin-top: 5%
      font-size: 1.95vh
      strong
        font-size: inherit
      span
        font-size: inherit

.article8
  grid-column: 3 / 5
  grid-row: 5 / 7
  display: grid
  grid-template-columns: 3.1fr .9fr
  grid-template-rows: 1.6fr 2.4fr
  grid-gap: 1%
  padding-left: 2%
  border-bottom: 1px solid lightgray
  border-left: 1px solid lightgray
  h1
    grid-column: 1 / 3
    grid-row: 1/2
    font-size: 6.5vh
  .text
    grid-column: 1 / 2
    columns: 2
    text-align: justify
    font-size: 1.8vh
    padding-right: 1%
    strong
      font-family: Font1
      letter-spacing: 1px
    p
      font-size: 1.2rem
    .second
      text-indent: 1.8rem
    .author
      padding-bottom: 4px
      border-bottom: 1px solid gray
  .imgSection
    grid-column: 2 / 3
    display: inline
    img
      width: 100%
    strong
      font-family: Font1
    p
      font-family: Font5
      font-weight: 400
      font-size: 1rem
    span
      font-weight: 200
      color: rgba(0,0,0,.8)

.article9
  grid-column: 3 / 5
  grid-row: 7 / 8
  display: grid
  grid-template-columns: 1.2fr .8fr
  border-left: 1px solid lightgray
  padding:auto
  background: #f8f2ef
  .clm1
    display: flex
    justify-content: space-evenly
    align-items: center
    width: 100%
    .writers
      display: flex
      align-items: center
      justify-content: center
      color: white
      height: 75px
      width: 30%
      background: red
      p
        font-size: 1.2rem
        text-align: center
        border-bottom: none
    p
      width: 110%
      padding-bottom: 2%
      padding-top: 1%
      border-bottom: 1px solid lightgray
  .clm2
    display: flex
    flex-direction: column
    justify-content: center
    padding-left: 2%
    border-left: 1px solid lightgray
    p
      width: 80%
      padding-bottom: 2%
      padding-top: 1%
      border-bottom: 1px solid lightgray
