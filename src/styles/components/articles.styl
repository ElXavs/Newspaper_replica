textBorder()
  text-shadow: 1px 0 0 #fff, -1px 0 0 #fff, 0 1px 0 #fff, 0 -1px 0 #fff, .5px .5px #fff, -.5px -.5px 0 #fff, .5px -.5px 0 #fff, -.5px .5px 0 #fff;

.article1
  grid-column: 1 / 4
  grid-row: 1 / 2
  display: grid
  grid-template-columns: 1fr 30%
  position: relative
  background-color: #EFE9E3
  .text
    margin-left: 3%
    h2
      font-size: 4.5rem
      span
        font-size: 4.5rem
    p
      font-size: 1.4rem
      span
        font-size: 1.4rem
  img
    position relative
    bottom: 0
    margin-top: 2%
    width: 100%
    height: 90%
    object-fit: contain
    overflow: hidden;

.article2
  grid-column: 4 / 5
  grid-row: 1 / 2
  padding-left: 3%
  padding-bottom: 3%
  border-left: 3px solid lightgray
  border-bottom: 3px solid lightgray
  img
    width: 100%
    height: 100%
    object-fit: cover

.article3
  grid-column: 1 / 2
  grid-row: 3 / 4
  &__container
    height:100%
  h3
    font-size: 3.5vh
  p
    font-size: 1.4vh
    span
      font-weight: bold
      font-size: 1.4vh
    strong
      font-size: 1.4vh
  img
    margin-top: 10px
    width: 100%
    height: 60%
    object-fit: cover

.article4
  border-top: 8px solid black
  border-bottom: 8px solid black
  grid-column: 1 / 2
  grid-row: 4 / 6
  &__text
    padding-top: 5px
    padding-bottom: 5px
    padding-right: 5px
    display: flex
    flex-direction: column
    h3
      color: red
      font-weight: 900
    h2
      font-size: 2.2vh
      font-weight: 900
    p
      font-size: 1.5vh
      font-weight: 600
    span
      align-self: flex-end
      font-weight: bold
      font-size: 1.8vh
.article5
  grid-column: 1 / 2
  grid-row: 6 / 8
  padding-top: 10px
  border-top: 1px solid gray
  img
    width: 100%
    height: 100%

.article6
  grid-column: 2 / 5
  grid-row: 3 / 5
  display: inline-block
  overflow: hidden;
  &__container
    width: 100%
    height: 100%
    position: relative
    z-index: 2
    &--image
      object-fit: cover
      width: 100%
      height: 100%
    &--text
      z-index: 3
      position: absolute
      bottom: 5%
      left: 1%
      h1
        font-size: 8vh
        width: 70%
        color: #006698
        textBorder()
      h3
        font-size: 2.5vh
        width: 30%
        textBorder()
        span
          font-size: 2.5vh
          textBorder()

.article7
  grid-column: 2 / 3
  grid-row: 5 / 7
  span
    color: black
    font-weight: 900
  img
    width: 100%
    object-fit: cover

.article8
  grid-column: 3 / 5
  grid-row: 5 / 7
  grid-template-columns: 2fr 1fr

.article9
  grid-column: 3 / 5
  grid-row: 7 / 8