.article1
  grid-column: 1 / 4
  grid-row: 1 / 2
  display: grid
  grid-template-columns: 1fr 30%
  position: relative
  background-color: #EFE9E3
  .text
    margin-left: 3%
    h2
      font-size: 4.5rem
      span
        font-size: 4.5rem
    p
      font-size: 1.4rem
      span
        font-size: 1.4rem
  img
    position relative
    bottom: 0
    margin-top: 2%
    width: 100%
    height: 90%
    object-fit: contain

.article2
  grid-column: 4 / 5
  grid-row: 1 / 2
  padding-left: 5%
  padding-bottom: 5%
  img
    width: 100%
    object-fit: cover

.article3
  grid-column: 1 / 2
  grid-row: 3 / 4
  img
    width: 100%
    object-fit: cover

.article4
  grid-column: 1 / 2
  grid-row: 4 / 6

.article5
  grid-column: 1 / 2
  grid-row: 6 / 7

.article6
  grid-column: 2 / 5
  grid-row: 3 / 5
  img
    width: 100%
    object-fit: cover

.article7
  grid-column: 2 / 3
  grid-row: 6 / 7
  span
    color: black
    font-weight: 900

.article8
  grid-column: 3 / 5
  grid-row: 5 / 7

.article9
  grid-column: 3 / 5
  grid-row: 7 / 8