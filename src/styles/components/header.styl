.header
  max-width: 1250px
  min-height: 250px
  margin: 0 auto
  background: white
  text-align: center
  .topline
    margin: 0 auto
    width: 99%
    margin-top: 20px
    background: black
    height: 3px
  .title
    display: flex
    align-items: center
    padding: 2%
    .image1
      height: 130px
      margin-right: 5%
    .image2
      height: 150px
  .line
    margin: 0 auto
    width: 100%
    border: 1px solid lightgray
  .metaData
    display: flex
    justify-content: center
    align-items: center
    margin: 2px auto
    p
      font-size: .9rem
    strong
      font-size: 1.3rem
    span
      margin: auto .5%
      color: red
      text-shadow: 1px 0 0 red, -1px 0 0 red, 0 1px 0 red, 0 -1px 0 red, .5px .5px red, -.5px -.5px 0 red, .5px -.5px 0 red, -.5px .5px 0 red;
  .lastText
    display: grid
    grid-template-columns: 96% 4%
    margin: 2px 0
    position: relative
    p
      font-size: .9rem
    .t1
      grid-column: 1 / 3
    .t2
      grid-column: 2 / 3
      position: absolute
      z-index: 3

  .bottomLine
    margin: 0 auto
    width: 100%
    background: black
    height: 1.3rem


