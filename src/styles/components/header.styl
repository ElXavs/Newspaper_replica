.header
  width: 100%
  margin: 0 auto
  background: white
  text-align: center
  .topline
    margin: 0 auto
    width: 99%
    margin-top: 20px
    background: black
    height: 3px
  .title
    display: flex
    flex-direction: column
    align-items: center
    padding: 2%
    .image1
      height: 50px
      margin-bottom: 5%
    .image2
      width: 100%
  .line
    margin: 0 auto
    width: 100%
    border: 1px solid lightgray
  .metaData
    display: flex
    justify-content: center
    align-items: center
    margin: 2px auto
    p
      font-size: 3vw
      font-family: Font1
      letter-spacing: .1rem
      font-weight: 300
    strong
      font-size: 3vw
      font-family: Font5
      font-weight: 900
    span
      margin: auto .5%
      color: red
      text-shadow: 1px 0 0 red, -1px 0 0 red, 0 1px 0 red, 0 -1px 0 red, .5px .5px red, -.5px -.5px 0 red, .5px -.5px 0 red, -.5px .5px 0 red;
  .lastText
    display: flex
    flex-direction: column
    margin: 2px 0
    p
      font-size: 3vw
      font-weight: 300
      font-family: Font1
      letter-spacing: .1rem
    .t2
      font-family: Font5
      font-weight: 900
      strong
        font-size: 3vw

  .bottomLine
    margin: 0 auto
    width: 100%
    background: black
    height: 1.3rem

@media screen and (min-width: 1250px)
  .header
    .title
      flex-direction: row
      .image1
        height: 130px
        margin-right: 5%
        margin-bottom: 0
    .metaData
      p
        font-size: 1.5rem
      strong
        font-size: 1.3rem
    .lastText
      display: grid
      grid-template-columns: 96% 4%
      position: relative
      p
        font-size: .85rem
      .t1
        grid-column: 1 / 3
      .t2
        grid-column: 2 / 3
        position: absolute
        z-index: 3
        strong
          margin-left: -4px
          font-size: 1rem

    .bottomLine
      margin: 0 auto
      width: 100%
      background: black
      height: 1.3rem
